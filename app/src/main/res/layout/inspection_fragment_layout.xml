<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <import type="android.view.View"/>
        <variable
            name="viewmodel"
            type="com.example.sefe.myapplication.viewmodels.InspectionViewModel"/>
    </data>
    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <SearchView
            bind:onSearch="@{viewmodel}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txtInspectionHeader"
            android:textSize="25dp"
            android:text="@{viewmodel.Name,default=test}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <ListView
            android:layout_below="@id/txtInspectionHeader"
            android:layout_toStartOf="@+id/btNextList"
            android:id="@+id/listInspection"
            bind:list="@{viewmodel.DetailsList}"
            bind:itemProvider="@{viewmodel.repo}"
            bind:onEndReached="@{viewmodel}"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <Button
            android:layout_alignParentBottom="true"
            android:id="@+id/btNextList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="@{viewmodel.IsEndShowing ? View.VISIBLE : View.GONE}"
            android:text="Next"
            />
    </RelativeLayout>
</layout>

